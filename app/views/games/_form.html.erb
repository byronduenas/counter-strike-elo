    <%= f.label :loser_id %><br>
    <%= collection_select(:game, :loser_id, Team.all, :id, :name, prompt: true) %>
  </div>
  <div class="field">
    <%= f.label :winner_score %><br>
    <%= f.number_field :winner_score %>
  </div>
  <div class="field">
    <%= f.label :loser_score %><br>
    <%= f.text_field :loser_score %>
  </div>
  <div class="field">
    <%= f.label :map_id %><br>
    <%= collection_select(:game, :map_id, Map.all, :id, :name, prompt: true) %>
  </div>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.datetime_select :date %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
